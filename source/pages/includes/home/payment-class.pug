            img(src=`./img/main/classes/item1.jpg`).__image
            .__wrapper
                span(class=colors[current])._tag Routines
                ._title Cha Cha Cha Footwork &quot;Oye Como Va&quot;
                footer._footer
                    .classes-item-style
